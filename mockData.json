  },
  "scenarios": [
    {
      "id": "A",
      "name": "Scenario A — Late Risk (Supply Shortage / Execution)",
      "description": "Material shortages + yield drop cause high late risk. Focus on commit confidence and expedite actions.",
      "defaultFilters": { "productLine": "Line A (Wearables)", "factory": "Factory SZ-01", "week": "2026-W04" }
    },
    {
      "id": "B",
      "name": "Scenario B — Overbuild Risk (Demand-down / Inventory Pressure)",
      "description": "Sell-through weaker than forecast. Inventory & WIP pressure rises. Focus on pacing down and freeze guardrails.",
      "defaultFilters": { "productLine": "Line B (Accessories)", "factory": "Factory DG-02", "week": "2026-W04" }
    },
    {
      "id": "C",
      "name": "Scenario C — Mixed Signals (Regional imbalance)",
      "description": "Some regions face shortage while others have excess. Focus on orchestration, routing, and evidence-based decisions.",
      "defaultFilters": { "productLine": "Line C (Robotics)", "factory": "Factory ZS-03", "week": "2026-W05" }
    }
  ],
  "workflow": [
    {
      "id": "signals",
      "name": "Signals",
      "title": "Signal Layer",
      "tagline": "Normalize signals + emit events",
      "description": "Turn scattered data into trusted signals with quality labels and event streams",
      "underlyingModules": [1]
    },
    {
      "id": "radar",
      "name": "Risk Radar",
      "title": "Sense & Rank",
      "tagline": "Rank late & excess risks",
      "description": "Identify dual risks with explainable drivers and confidence scores",
      "underlyingModules": [2, 3, 4]
    },
    {
      "id": "orchestration",
      "name": "Orchestration",
      "title": "Decide & Route",
      "tagline": "Route actions: auto vs human",
      "description": "Turn recommendations into routable workflows with playbooks",
      "underlyingModules": [5]
    },
    {
      "id": "evidence",
      "name": "Evidence & Learning",
      "title": "Evidence & Feedback",
      "tagline": "Briefing + decision log + feedback",
      "description": "Generate evidence packs and learn from outcomes",
      "underlyingModules": [6]
    }
  ],
  "modules": [
    {
      "id": 1,
      "title": "Signal Ingestion & Normalization",
      "tagline": "Unify scattered signals into a consistent dataset & event stream.",
      "decides": "What data is trusted, how it is normalized, and what events are emitted for downstream decisioning.",
      "inputs": [
        { "name": "Weekly Build Plan", "source": "Planning", "refresh": "Weekly", "owner": "Planning", "quality": "OK" },
        { "name": "Daily Output", "source": "Factory", "refresh": "Daily", "owner": "China Delivery", "quality": "OK" },
        { "name": "WIP Snapshot", "source": "Factory MES", "refresh": "Daily", "owner": "Factory", "quality": "PARTIAL" },
        { "name": "Yield / FPY Trend", "source": "Quality", "refresh": "Daily", "owner": "PQE", "quality": "OK" },
        { "name": "Material Shortage List", "source": "Procurement", "refresh": "Daily", "owner": "Sourcing", "quality": "OK" },
        { "name": "FG / Transit Inventory", "source": "ERP/WMS", "refresh": "Daily", "owner": "Supply Planning", "quality": "PARTIAL" },
        { "name": "Forecast Revision Events", "source": "Demand Planning", "refresh": "Ad-hoc", "owner": "Demand Planning", "quality": "OK" }
      ],
      "outputs": [
        { "name": "Unified Execution Dataset", "type": "table", "example": "normalized_records[]" },
        { "name": "Data Quality Flags", "type": "event", "example": "dq_flags[]" },
        { "name": "Event Stream", "type": "event", "example": "events[]" }
      ],
      "actions": [
        { "who": "Platform Team", "do": "Map fields & connect sources via Auger pipelines", "sla": "TBD" },
        { "who": "China Delivery", "do": "Validate business definitions & thresholds", "sla": "Weekly review" }
      ]
    },
    {
      "id": 2,
      "title": "Supply Execution Health",
      "tagline": "Quantify execution health & commit confidence.",
      "decides": "Whether supply execution is healthy and what the commit confidence is for each order/week.",
      "inputs": [
        { "name": "Plan vs Actual Output", "source": "Factory", "refresh": "Daily" },
        { "name": "WIP by station", "source": "MES", "refresh": "Daily" },
        { "name": "Yield/FPY trend", "source": "Quality", "refresh": "Daily" },
        { "name": "Critical material status", "source": "Procurement", "refresh": "Daily" },
        { "name": "Capacity constraints", "source": "Factory", "refresh": "Weekly" }
      ],
      "outputs": [
        { "name": "Execution Health Score", "type": "metric", "example": "0-100 + RYG" },
        { "name": "Bottleneck Diagnosis", "type": "explain", "example": "Top drivers" },
        { "name": "Commit Confidence", "type": "probability", "example": "0-1" },
        { "name": "Early Alerts", "type": "event", "example": "alerts[]" }
      ],
      "actions": [
        { "who": "China Delivery", "do": "Trigger expedite / re-sequence / escalation playbook", "sla": "24h" }
      ]
    },
    {
      "id": 3,
      "title": "Demand & Inventory Pressure",
      "tagline": "Detect overbuild risks early and recommend production pacing guardrails.",
      "decides": "Whether to pace down/freeze production releases to reduce WIP & obsolescence risk.",
      "inputs": [
        { "name": "FG Inventory", "source": "ERP/WMS", "refresh": "Daily" },
        { "name": "WIP Inventory", "source": "MES", "refresh": "Daily" },
        { "name": "In-transit Inventory", "source": "Logistics", "refresh": "Daily" },
        { "name": "Forecast revision events", "source": "Demand Planning", "refresh": "Ad-hoc" },
        { "name": "Sell-through signal", "source": "Sales/Channel", "refresh": "Weekly" }
      ],
      "outputs": [
        { "name": "Inventory Pressure Index", "type": "metric", "example": "0-100 + drivers" },
        { "name": "Overbuild Risk Flag", "type": "flag", "example": "High/Med/Low" },
        { "name": "Liability-at-risk", "type": "estimate", "example": "$ WIP locked cost (rough)" },
        { "name": "Pacing Guardrails", "type": "recommendation", "example": "max WIP / freeze window" }
      ],
      "actions": [
        { "who": "Supply Planning + China Delivery", "do": "Align pacing plan with factory release-to-line", "sla": "48h" }
      ]
    },
    {
      "id": 4,
      "title": "Risk Radar Dashboard",
      "tagline": "Rank dual risks (late & excess) with explainable drivers and actions.",
      "decides": "What risks to focus on today, and whether they can be auto-actioned or require human review.",
      "inputs": [
        { "name": "Execution Health Score", "source": "Module 2", "refresh": "Daily" },
        { "name": "Inventory Pressure Index", "source": "Module 3", "refresh": "Daily" },
        { "name": "Events stream", "source": "Module 1", "refresh": "Real-time" }
      ],
      "outputs": [
        { "name": "Late Risk TopN", "type": "ranked_list", "example": "riskItemsLate[]" },
        { "name": "Excess Risk TopN", "type": "ranked_list", "example": "riskItemsExcess[]" },
        { "name": "Risk Drivers", "type": "explain", "example": "drivers[]" },
        { "name": "Recommended Actions", "type": "action", "example": "actions[]" }
      ],
      "actions": [
        { "who": "China Delivery", "do": "Open evidence pack and route to playbook / approval", "sla": "Same day" }
      ]
    },
    {
      "id": 5,
      "title": "Decision Orchestration & Playbooks",
      "tagline": "Turn recommendations into routable workflows (auto vs human-in-loop).",
      "decides": "Which playbook to run, who approves, and what actions are triggered.",
      "inputs": [
        { "name": "Risk Items (with confidence)", "source": "Module 4", "refresh": "Daily" },
        { "name": "Business rules & priorities", "source": "Ops policy", "refresh": "Ad-hoc" }
      ],
      "outputs": [
        { "name": "Workflow Routing", "type": "route", "example": "auto/human approval" },
        { "name": "Playbook Steps", "type": "checklist", "example": "step list + owners" },
        { "name": "Auto-actions triggers", "type": "trigger", "example": "freeze release / expedite request" }
      ],
      "actions": [
        { "who": "Approvers", "do": "Approve pacing down / freeze window / re-sequence", "sla": "24-48h" }
      ]
    },
    {
      "id": 6,
      "title": "Exception Triage & Evidence Pack",
      "tagline": "One-click evidence pack + decision log + feedback loop.",
      "decides": "How exceptions are summarized, what decision is made, and how learning feeds back into scoring & playbooks.",
      "inputs": [
        { "name": "Exception routed from Module 5", "source": "Workflow", "refresh": "Real-time" },
        { "name": "Signals snapshot", "source": "Modules 1-4", "refresh": "On-demand" },
        { "name": "Qualitative updates (emails/IM)", "source": "Ops comms", "refresh": "Ad-hoc" }
      ],
      "outputs": [
        { "name": "Evidence Pack (printable)", "type": "document", "example": "1-page summary" },
        { "name": "Decision Log", "type": "audit", "example": "who/when/why" },
        { "name": "Feedback", "type": "label", "example": "effective/ineffective + reason" }
      ],
      "actions": [
        { "who": "China Delivery", "do": "Close the loop with outcome feedback", "sla": "Within 7 days" }
      ]
    }
  ],
